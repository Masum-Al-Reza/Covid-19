<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="#EAECE4"
    tools:context=".DetailActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#604265"
        app:cardBackgroundColor="#260B4E"
        android:layout_marginTop="-100dp"
        app:cardCornerRadius="70dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvCountry"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-light"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Last Update:"
                android:textColor="#fff" />

            <TextView
                android:gravity="center"
                android:id="@+id/updateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:fontFamily="sans-serif-smallcaps"
                android:text=""
                android:textColor="#fff"
                android:layout_marginLeft="10dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
 <androidx.cardview.widget.CardView
     android:layout_width="200dp"
     app:cardBackgroundColor="@color/active"
     android:elevation="40dp"
     app:cardCornerRadius="20sp"
     android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="Cases"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"/>
 </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvCases"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="@color/cases"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Today Cases"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvTodayCases"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="@color/deaths"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Deaths"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvDeaths"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="#FF5722"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Today Deaths"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvTodayDeaths"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="@color/recovered"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Recovered"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvRecovered"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="@color/masum"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Active"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvActive"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:elevation="40dp"
            app:cardCornerRadius="20sp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:text="Critical"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/tvCritical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:fontFamily="sans-serif-light"
            android:gravity="end" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</LinearLayout>